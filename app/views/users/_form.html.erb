<%= render'shared/errors', obj: @user %>
<div class="w-50 d-flex justify-content-center login-signup-form">
  <div class="col-12 col-md-8">
  <%= form_with(model: @user) do |form| %>

    <div class="mb-2">
      <%= form.label :username, class: "form-label fw-bold" %>
      <%= form.text_field :username, class: "form-control" %>
    </div>
    <div class="mb-2">
      <%= form.label :email, class: "form-label fw-bold" %>
      <%= form.text_field :email, class: "form-control" %>
    </div>
    <div class="mb-2">
      <%= form.label :password, class: "form-label fw-bold" %>
      <%= form.text_field :password, class: "form-control" %>
    </div>

    <div>
      <%= form.submit @user.new_record? ? "Submit" : "Save Changes", class: "btn btn-primary mt-2" %>
    </div>

  <% end %>
  </div>

</div>