<div>
  <%= render'shared/errors', obj: @user %>
  <div class="d-flex justify-content-center login-signup-form">
    <div class="col-12">
    <%= form_with(model: @user) do |form| %>
      <h1 class="text-center"><%= @user.new_record? ? "Sign Up" : "" %></h1>
      <div class="mb-2">
        <%= form.label :username, class: "form-label fw-bold" %>
        <%= form.text_field :username, class: "form-control" %>
      </div>
      <div class="mb-2">
        <%= form.label :email, class: "form-label fw-bold" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>
      <div class="mb-2">
        <%= form.label :password, class: "form-label fw-bold", type: "password" %>
        <%= form.text_field :password, class: "form-control" %>
      </div>
      <div class="mb-2">
        <%= form.label "Profile Image:", class: "form-label fw-bold" %> <br>
        <div class="form-check form-check-inline">
          <%= form.radio_button :img_path, 'https://cdn.pixabay.com/photo/2017/06/05/14/30/elephant-2374224_960_720.jpg', class: "form-check-input" %>
          <img src="https://cdn.pixabay.com/photo/2017/06/05/14/30/elephant-2374224_960_720.jpg" alt="elephant_image" style="height: 50px; width: 50px;">
        </div>
        <div class="form-check form-check-inline">
          <%=form.radio_button :img_path, 'https://cdn.pixabay.com/photo/2015/08/18/22/20/moose-894926_960_720.jpg', class: "form-check-input" %>
          <img src="https://cdn.pixabay.com/photo/2015/08/18/22/20/moose-894926_960_720.jpg" alt="moose_image" style="height: 50px; width: 50px;">
        </div>
        <div class="form-check form-check-inline">
          <%=form.radio_button :img_path, 'https://cdn.pixabay.com/photo/2017/09/22/05/19/blackbird-2774513_960_720.jpg', class: "form-check-input" %>
          <img src="https://cdn.pixabay.com/photo/2017/09/22/05/19/blackbird-2774513_960_720.jpg" alt="bird_image" style="height: 50px; width: 50px;">
        </div>
      </div>

      <div>
        <%= form.submit @user.new_record? ? "Sign Up!" : "Save Changes", class: "btn btn-primary mt-2" %>
      </div>

    <% end %>
    </div>

  </div>
</div>