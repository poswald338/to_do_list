
<div id="home-background">
  <div id="overlay">
  </div>
    <div class="row" id="abc">
      <div class="col-12 ms-5 mt-4 text-white">
        <h1 class="logo-home mt-2">2-Do Tracker</h1>
        <p class="mt-2 mb-4">Track your to-do's and collaborate with friends, family, or co-workers to knock out large tasks together. Track. Do. DONE!</p>
        <div class="col-md-8">
          
      <h1 class=" mb-4">Get Tracking!</h1>
      <%= form_with(scope: :session) do |form| %>

        <div class="mb-2">
          <%= form.label :email, class: "form-label fw-bold" %>
          <%= form.text_field :email, class: "form-control" %>
        </div>
        <div class="mb-2">
          <%= form.label :password, class: "form-label fw-bold" %>
          <%= form.text_field :password, class: "form-control" %>
        </div>

        <div class="d-flex justify-content-center">
          <%= form.submit "Log In", class: "btn btn-primary mt-2 w-50" %>
        </div>

      <% end %>
      <p class="mb-0 text-center mt-2">Not a user? <%= link_to "Sign Up Here", '/signup', class: "text-primary" %></p>
        </div>
      </div>
    </div>
</div>