<h1>Edit your task!</h1>

<%= form_with(model: @task, url: task_path) do |form| %>

  <p>
    <%= form.label :title %>
    <%= form.text_field :title %>
  </p>
  <p>
    <%= form.label :description %>
    <%= form.text_area :description %>
  </p>
  <p>
    <%= form.label :priority %>
    <%= form.text_field :priority %>
  </p>
  <p>
    <%= form.submit "Update Task" %>
  </p>

<% end %>