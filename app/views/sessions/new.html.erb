<div class="container">
  <h1 class="text-center">Login</h1>
  <div class="w-100 d-flex justify-content-center">
    <div class="col-12 col-md-8 login-signup-form">
    <%= form_with(scope: :session) do |form| %>

      <div class="mb-2">
        <%= form.label :email, class: "form-label fw-bold" %>
        <%= form.text_field :email, class: "form-control" %>
      </div>
      <div class="mb-2">
        <%= form.label :password, class: "form-label fw-bold" %>
        <%= form.text_field :password, class: "form-control" %>
      </div>

      <div>
        <%= form.submit "Log In", class: "btn btn-primary mt-2" %>
      </div>

    <% end %>
    </div>

  </div>
</div>