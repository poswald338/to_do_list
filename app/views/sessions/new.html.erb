<div class="container">
  <div class="d-flex justify-content-center">
    <div class="col-12 col-md-8 position-absolute top-50 start-50 translate-middle w-50 border p-4">
      <h1 class="text-center mb-4">Login</h1>
      <%= form_with(scope: :session) do |form| %>

        <div class="mb-2">
          <%= form.label :email, class: "form-label fw-bold" %>
          <%= form.text_field :email, class: "form-control" %>
        </div>
        <div class="mb-2">
          <%= form.label :password, class: "form-label fw-bold" %>
          <%= form.text_field :password, class: "form-control" %>
        </div>

        <div class="d-flex justify-content-center">
          <%= form.submit "Log In", class: "btn btn-primary mt-2 w-50" %>
        </div>

      <% end %>
      <p class="mb-0 text-center mt-2">Not a user? <%= link_to "Sign Up Here", '/signup', class: "text-primary" %></p>
    </div>
  </div>
</div>